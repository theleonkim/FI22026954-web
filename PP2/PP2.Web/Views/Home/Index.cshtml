@model PP2.Web.Models.BinaryCalcViewModel
@{
    ViewData["Title"] = "Binary Calculator";
}

<h2>Binary Calculator</h2>
<p>Enter two binary strings (a and b). Allowed lengths: 2, 4, 6, or 8. Only 0 and 1.</p>

<form asp-action="Index" method="post" class="mb-3">
    @Html.AntiForgeryToken()
    <div class="mb-2">
        <label for="A" class="form-label">a</label>
        <input asp-for="A" class="form-control" />
        <span asp-validation-for="A" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label for="B" class="form-label">b</label>
        <input asp-for="B" class="form-control" />
        <span asp-validation-for="B" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (Model?.Results != null && Model.Results.Any())
{
    <h3>Results</h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>Bin</th>
                <th>Oct</th>
                <th>Dec</th>
                <th>Hex</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in Model.Results)
        {
            <tr>
                <td>@r.Label</td>
                <td>@r.Bin</td>
                <td>@r.Oct</td>
                <td>@r.Dec</td>
                <td>@r.Hex</td>
            </tr>
        }
        </tbody>
    </table>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
